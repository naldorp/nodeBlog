extends layout
block content
    div.admin  
        if (articles.length === 0 )
          p
            | Nothing to display. Add a new 
            a(href="/post") article
            |.
        else
          
          table.table.table-stripped
            thead
              tr
                th(colspan="2") Actions
                th Post Title
            tbody
              each article, index in articles
                tr(data-id="#{article._id}", class=(!article.isPublished)?'unpublished':'')
                  td.action
                    button.btn.btn-danger.btn-sm.remove(type="button")
                      span.glyphicon.glyphicon-remove(title="Remove")
                  td.action
                    button.btn.btn-default.btn-sm.publish(type="button")
                      span.glyphicon(class=(article.isPublished)?"glyphicon-pause":"glyphicon-play", title=(article.isPublished)?"Unpublish":"Publish")
                  td= article.title
          script(type="text/javascript", src="js/admin.js")